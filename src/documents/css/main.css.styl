vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    -o-{prop} args
    -ms-{prop} args
    {prop} args

body
    font-family Helvetica, sans
    max-width 720px
    margin 0 auto
    background #333
    
h1
    font-size 1.3em
    text-align center
    color #d8d8d8
    margin 0 0 40px 0
    
.logo
    color white
    margin 20px 0 0 0
    font 7em 'Gochi Hand', sans
    text-align center
    text-shadow 1px 0 0 #fff
    
.main
    background #f8f8f8
    margin 20px 10px 0 10px
    padding 10px 20px
    border 1px solid white
    vendor(border-radius, 10px)
