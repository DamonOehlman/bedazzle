@import 'nib'

#cardtable {
    background: green;
    width: 600px;
    height: 300px;
    padding: 20px;
}

#player1 {
    background: gray;
    width: 600px;
    height: 200px;
    padding: 20px;
}

.hand {
    margin-top: 35px;
    transform: rotate(-20deg);
    position: absolute;
}

.card {
    background: white;
    border-radius: 5px;
    position: absolute;
    width: 100px;
    height: 145px;
    padding: 2px;
    box-shadow: #333 0 0 2px;
    transition: all ease-in-out 0.3s;
    -webkit-transform-origin: left bottom;
    -moz-transform-origin: left bottom;
    
    img {
        height: 100%;
        width: 100%;
    }
}